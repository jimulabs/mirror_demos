<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/card_background"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
            android:alpha="0.8"
            android:layout_width="300dp"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                style="@style/textStyle.Large"
                android:layout_gravity="center_horizontal"/>

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                style="@style/Widget.Holo.CompoundButton.Switch"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/time"
                android:id="@+id/timeSwitch"/>

        <View
                android:id="@+id/seperator"
                android:background="#44ffffff"
                android:layout_width="fill_parent"
                android:layout_height="1.5dip"
                android:layout_marginTop="30dp"
                android:layout_below="@id/timeSwitch"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seperator"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-3dp"
                android:layout_alignParentRight="true"
                android:alpha="0.3"
                android:id="@+id/cloud3"
                android:src="@drawable/cloud_notifier_small_off"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cloud3"
                android:layout_toLeftOf="@+id/cloud3"
                android:layout_marginLeft="-5dp"
                android:alpha="0.3"
                android:id="@+id/cloud2"
                android:src="@drawable/cloud_notifier_small_on"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/cloud3"
                android:layout_toLeftOf="@+id/cloud2"
                android:alpha="0.3"
                android:id="@+id/cloud1"
                android:src="@drawable/cloud_notifier_big_on"/>
    </RelativeLayout>
</LinearLayout>