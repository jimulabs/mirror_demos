<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
     android:interpolator="@android:interpolator/bounce"
     android:ordering="sequentially">
    <set android:ordering="together" android:duration="500">
        <objectAnimator
                android:propertyName="scaleX"
                android:valueFrom="1"
                android:valueTo="2"/>
        <objectAnimator
                android:propertyName="scaleY"
                android:valueFrom="1"
                android:valueTo="2"/>
    </set>
    <set android:ordering="together" android:duration="500">
        <objectAnimator
                android:propertyName="scaleX"
                android:valueFrom="2"
                android:valueTo="1"/>
        <objectAnimator
                android:propertyName="scaleY"
                android:valueFrom="2"
                android:valueTo="1"/>
    </set>
</set>